doctype html(lang='')
head
  title Querying the social Web
  meta(charset='UTF-8')
  meta(name='description', content='')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')

  // Bootstrap CSS
  link(href='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css', rel='stylesheet', media='screen')
  link(rel='stylesheet', type='text/css', href='stylesheets/style.css')

body
  nav.navbar.navbar-default
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
        a.navbar-brand(href='/') Web Intelligent

      // Collect the nav links, forms, and other content for toggling
      #main-navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(data-target='#keywords-container', class=path=='/'?'active':'')
            a(href='/') Keywords
          li(data-target='#users-container', class=path=='users'?'active':'')
            a(href='/users') Users

  .container
    .row

    // Section for keywords
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      block content

  // jQuery
  script(src='http://code.jquery.com/jquery.js')
  // Bootstrap JavaScript
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js')
  script(src='javascripts/main.js', type='text/javascript')
