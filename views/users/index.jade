extends ../layouts/main

block content
  h3 Users Index
  .row
    .col-sm-4.col-xs-12
      .jumbotron
        form(action='', method='POST', role='form')
          legend Discussion
          .form-group
            label(for='usernames') Username
            input.form-control(id='usernames' type='text', placeholder='Username')
            span(style='color: gray; font-size: 0.85em;')
              i Press Enter and you can add more username
          .form-group
            label(for='keywords_limit') Keywords Limit
            input.form-control(id='keywords_limit' type='number', min=1, max=5, placeholder='Keywords Limit')
          .form-group
            label(for='days_limit') Days Limit
            input.form-control(id='days_limit' type='number', min=1, max=5, placeholder='Days Limit')
          button.btn.btn-primary.btn-block.btn-lg(type='submit') Search 
          
    .col-sm-4.col-xs-12
      .jumbotron
        form(action='', method='POST', role='form')
          legend Point of interest
          .form-group
            label(for='username') Username
            input.form-control(id='username' type='text', placeholder='Username')
          .form-group
            label(for='days_limit') Days Limit
            input.form-control(id='days_limit' type='number', min=1, max=5, placeholder='Days Limit')
          button.btn.btn-primary.btn-block.btn-lg(type='submit') Search 
    .col-sm-4.col-xs-12
      .jumbotron
        form(action='', method='POST', role='form')
          legend Venue visitor
          div(role='tabpanel')
            .nav(role='tablist')
              .btn-group(role='presentation')
                a.btn.btn-info.active(href='#home', aria-controls='home', role='tab', data-toggle='tab', onclick='setTabActive(this)') Place
                a.btn.btn-info(href='#profile', aria-controls='profile', role='tab', data-toggle='tab', onclick='setTabActive(this)') Coordinate

            .tab-content
              #home.tab-pane.fade.in.active(role='tabpanel')
                .form-group
                  label(for='location') Place
                  input.form-control(id='location' type='text', placeholder='Location')
              #profile.tab-pane.fade(role='tabpanel')
                .row
                  .col-xs-12.col-sm-6
                    .form-group
                      label(for='latitude') Latitude
                      input.form-control(id='latitude' type='text', placeholder='Latitude')
                  .col-xs-12.col-sm-6
                    .form-group
                      label(for='longitude') Longitude
                      input.form-control(id='longitude' type='text', placeholder='Longitude')

          .form-group
            label(for='days_limit') Days Limit
            input.form-control(id='days_limit' type='number', min=1, max=5, placeholder='Days Limit')
          button.btn.btn-primary.btn-block.btn-lg(type='submit') Search 

block footer
  script.
    $(function(){
      $('#usernames').select2({
          tags: [],
          formatNoMatches: function() {
              return '';
          },
          dropdownCssClass: 'select2-hidden'
        });
    });

    function setTabActive(currentTab){
      currentTab = $(currentTab);
      currentTab.parent().find('.active').removeClass('active');
      currentTab.addClass('active');
    }