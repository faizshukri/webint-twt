extends ../layouts/main

block content

  
  center 
    h1 Track Discussions
    br
  form(action='/tweet/discussions', accept-charset='UTF-8')
    .row
      .col-sm-6.col-sm-offset-3
        input.form-control(id= 'keyword', type='text', name='keyword', placeholder='Insert your keyword (topics or hashtags)')
        br
        input.form-control(id= 'geocode', type='text', name='geocode', placeholder='(Optional) Insert your location coordinate')
        br
        input.form-control(id= 'count', type='text', name='count', placeholder='(Optional) Number of messages')
        br
        input.btn.btn-primary.btn-lg(type='submit', value='Submit')

  

