extends ../layouts/main

block content

	ol.breadcrumb
		li
			a(href='/') Home
		li
			a(href='/tweet') Tweet
		li Retweet

	.page-header
		center
			h1 User Retweets

	.row
		.col-sm-6.col-sm-offset-3
			.panel.panel-info
				.panel-heading(typeof='user')
					center 
						img.img-circle(src=tweets[0].retweeted_status.user.profile_image_url.replace('normal', 'bigger'),property='Image')
					center
							b #{tweets[0].retweeted_status.user.name}
								br
							a(href='/user/profile/'+tweets[0].retweeted_status.user.screen_name,property='userID') @#{tweets[0].retweeted_status.user.screen_name}

				.panel-body
					center #{tweets[0].retweeted_status.text}
						br
					center
						if tweets[0].extended_entities && tweets[0].extended_entities.media
							each media in tweets[0].extended_entities.media
								if media.type=='photo'
									img(style='width: 50%;', src=media.media_url)

				ul.list-group
					each tweet in tweets
						li.list-group-item 
							a(href='/user/profile/'+tweet.user.screen_name) @#{tweet.user.screen_name} 
							|retweeted 
							span.created_at(style='font-weight: bold;') #{tweet.created_at}

append footer
	script.
		$(function(){
			var created_at = $('.created_at');
			$.each(created_at, function(index, value){
				$(value).text(moment($(value).text(), 'ddd MMM DD HH:mm:ss ZZ YYYY').fromNow());
			});
		})